<faceosc>
	<!-- to use a default value, leave the tag commented out -->

	<!-- choose the input source, set useCamera to 0 to use a movie -->
	<source>
		<useCamera>1</useCamera>
	</source>

	<!-- camera input settings -->
	<camera>
        <webCam>0</webCam>
        <faceTime>1</faceTime>
        <kinect>0</kinect>
        <kinectIR>0</kinectIR>
		<device>0</device>
		<framerate>15</framerate>
		<width>640</width>
		<height>480</height>
	</camera>

	<!-- movie input settings -->
	<movie>
		<!--
			the file should be a full path ie /User/yourusername/myMovie.mov or you
			can use a relative path with the home folder ~/myMovie.mov
		-->
		<!--<filename>/path/to/myMovie.mov</filename>-->
		<volume>1.0</volume> <!-- volume is 0 - 1.0 -->
		<!--
			speed is -16 - 16
			1.0 is normal speed, -1.0 is reverse, 2.0 is double speed, etc
		-->
		<speed>1.0</speed> 
	</movie>
    
    <!-- nori -->
    <screen>
        <width>1280</width>
        <height>720</height>
        <framerate>20</framerate>
        <sizeToCmRatio>0.33</sizeToCmRatio>
    </screen>
    



	<!-- face tracker settings -->
	<face>
		<!-- <scale>1</scale>
		<iterations>5</iterations>
        <clamp>3</clamp>
        <tolerance>0.1</tolerance>
		<attempts>1</attempts>
        <haarminsize>0.05</haarminsize>
         -->
		<!-- 
			drawMesh is a bool, 0 or 1
			1 by default
		-->
        <tolerance>0.1</tolerance>
		<drawMesh>1</drawMesh>
	</face>

	<!-- osc output settings -->
	<osc>
		<host>localhost</host>
		<port>9000</port>
	</osc>

<FaceOSC>
		<pose>1</pose>
		<gesture>1</gesture>
		<raw>0</raw>
		<normalize_raw>0</normalize_raw>
	</FaceOSC>
</faceosc>
